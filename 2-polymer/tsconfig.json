{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
